#set term
defbce on 
term xterm-256color
attrcolor b ".I"
termcapinfo xterm-256color ti@:te@

#UTF-8を使う
defutf8 on
defencoding utf8
encoding utf-8 utf-8

#scroll back
defscrollback 10000

#escape bind C-t
escape ^Tt
bind , title
bind l license 


altscreen on

startup_message off
autodetach on
vbell off


# For caption
hardstatus on
#hardstatus alwayslastline '%{= .b}%H%{-} %L=%-w%45L>%{=u b.}%n'
#caption always '%?%F%{= bw}%:%{= wk}%?%2n%f%07=%t%='
#sorendition '+r .b'

#hardstatus alwayslastline '%{= .b}%H%{-} %L=%-w%45L>%{=u b.}%n %t%{-}%+w %-17<%=%m/%d %02c:%s'
#caption always '%?%F%{= bw}%:%{= wk}%?%2n%f%07=%t%='
#sorendition '+r .b'


#shelltitle "$ |shell"
shell $SHELL

#default log file
deflog on

# enable 256 color
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# changes the windowlist format to suit caption/hardstatus
windowlist title  '%{u .g}Num Flags Title%=[0-9] select the number [movement] j,C-n:Down k,C-p:Up (C-)f:PageDown (C-)b:PageUp'
windowlist string '%{.g}%3n %{.y}%f%09=%{dg} %t %='

caption always '%?%F%{= gW}%:%{= Kk}%?%2n%f%07=%t%='
hardstatus alwayslastline '%m/%d %02c:%s %{= .g}%H%{-} %L=%-w%45L>%{=u g.}%n %t%{-}%+w %-17<%=%{= .y}(%l)'
